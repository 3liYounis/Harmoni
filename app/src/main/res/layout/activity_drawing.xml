<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DrawingActivity"
    android:background="@color/black"
    >


    <ImageView
        android:id="@+id/back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:padding="5dp"
        android:src="@drawable/back"
        app:layout_constraintEnd_toEndOf="@+id/endlogo"
        app:layout_constraintStart_toStartOf="@+id/startlogo"
        app:layout_constraintTop_toTopOf="@+id/toplogo" />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.03"
        android:orientation="vertical"
        android:id="@+id/startlogo"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.17"
        android:orientation="vertical"
        android:id="@+id/endlogo"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0"
        android:orientation="horizontal"
        android:id="@+id/toplogo"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="horizontal"
        android:id="@+id/bottomlogo"
        />


    <ImageView
        android:id="@+id/slider1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:orientation="horizontal"
        android:src="@drawable/background"
        app:layout_constraintBottom_toBottomOf="@+id/bottom1"
        app:layout_constraintEnd_toEndOf="@+id/end1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/start1"
        app:layout_constraintTop_toTopOf="@+id/top1"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/slider2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:orientation="horizontal"
        android:src="@drawable/background_empty"
        app:layout_constraintBottom_toBottomOf="@+id/bottom1"
        app:layout_constraintEnd_toEndOf="@+id/end2"
        app:layout_constraintStart_toStartOf="@+id/start2"
        app:layout_constraintTop_toTopOf="@+id/top1" />

    <ImageView
        android:id="@+id/slider3"
        android:layout_width="99dp"
        android:layout_height="16dp"
        android:clickable="true"
        android:orientation="horizontal"
        android:src="@drawable/background_empty"
        app:layout_constraintBottom_toBottomOf="@+id/bottom1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/slider2"
        app:layout_constraintTop_toTopOf="@+id/top1" />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.22"
        android:orientation="vertical"
        android:id="@+id/start1"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.42"
        android:orientation="vertical"
        android:id="@+id/end1"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.04"
        android:orientation="horizontal"
        android:id="@+id/top1"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.06"
        android:orientation="horizontal"
        android:id="@+id/bottom1"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.47"
        android:orientation="vertical"
        android:id="@+id/start2"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.67"
        android:orientation="vertical"
        android:id="@+id/end2"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.72"
        android:orientation="vertical"
        android:id="@+id/start3"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.92"
        android:orientation="vertical"
        android:id="@+id/end3"
        />


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="Drawing charlie activity "
        android:textColor="@color/white"
        android:textSize="55px"
        app:layout_constraintEnd_toStartOf="@+id/endimage"
        app:layout_constraintStart_toStartOf="@+id/startimage"
        app:layout_constraintTop_toTopOf="@id/toptext1" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.33"
        android:orientation="vertical"
        android:id="@+id/starttext1"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="horizontal"
        android:id="@+id/toptext1"
        />



    <ImageView
        android:id="@+id/image1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/startimage"
        app:layout_constraintTop_toTopOf="@id/topimage"
        app:layout_constraintEnd_toEndOf="@id/endimage"
        app:layout_constraintBottom_toBottomOf="@id/bottomimage"
        android:src="@drawable/doodle_1"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0"
        android:orientation="vertical"
        android:id="@+id/startimage"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="1"
        android:orientation="vertical"
        android:id="@+id/endimage"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.27"
        android:orientation="horizontal"
        android:id="@+id/topimage"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.65"
        android:orientation="horizontal"
        android:id="@+id/bottomimage"
        />


    <TextView
        android:id="@+id/sectext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Draw it 3 times \n on a sheet of paper"
        android:textColor="@color/white"
        android:gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/starttext3"
        app:layout_constraintTop_toTopOf="@id/toptext3"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.32"
        android:orientation="vertical"
        android:id="@+id/starttext3"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.65"
        android:orientation="horizontal"
        android:id="@+id/toptext3"
        />



    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.22"
        android:orientation="vertical"
        android:id="@+id/starttext2"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.17"
        android:orientation="horizontal"
        android:id="@+id/toptext2"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/background"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="36dp"
        app:layout_constraintBottom_toBottomOf="@id/bottomimage1"
        app:layout_constraintEnd_toEndOf="@id/endimage1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/startimage1"

        app:layout_constraintTop_toTopOf="@id/topimage1"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="vertical"
        android:id="@+id/startimage1"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.9"
        android:orientation="vertical"
        android:id="@+id/endimage1"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.75"
        android:orientation="horizontal"
        android:id="@+id/topimage1"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.83"
        android:orientation="horizontal"
        android:id="@+id/bottomimage1"
        />


    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.35"
        android:orientation="vertical"
        android:id="@+id/startimage3"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.67"
        android:orientation="vertical"
        android:id="@+id/endimage3"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.9"
        android:orientation="horizontal"
        android:id="@+id/topimage3"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="1"
        android:orientation="horizontal"
        android:id="@+id/bottomimage3"
        />


    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0"
        android:orientation="vertical"
        android:id="@+id/ssstart"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.35"
        android:orientation="vertical"
        android:id="@+id/ssend"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.7"
        android:orientation="vertical"
        android:id="@+id/starttrophy"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.98"
        android:orientation="vertical"
        android:id="@+id/endtrophy"
        />





    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0"
        android:orientation="vertical"
        android:id="@+id/startimage2"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="1"
        android:orientation="vertical"
        android:id="@+id/endimage2"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.27"
        android:orientation="horizontal"
        android:id="@+id/topimage2"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.65"
        android:orientation="horizontal"
        android:id="@+id/bottomimage2"
        />










    <ImageView
        android:id="@+id/image3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/startrec"
        app:layout_constraintTop_toTopOf="@id/toprec"
        app:layout_constraintEnd_toEndOf="@id/endrec"
        app:layout_constraintBottom_toBottomOf="@id/bottomrec"
        android:src="@drawable/background_empty"
        android:visibility="invisible"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="vertical"
        android:id="@+id/startrec"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.9"
        android:orientation="vertical"
        android:id="@+id/endrec"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.3"
        android:orientation="horizontal"
        android:id="@+id/toprec"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.65"
        android:orientation="horizontal"
        android:id="@+id/bottomrec"
        />


    <ImageView
        android:id="@+id/image2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/startimage"
        app:layout_constraintTop_toTopOf="@id/topimage"
        app:layout_constraintEnd_toEndOf="@id/endimage"
        app:layout_constraintBottom_toBottomOf="@id/bottomimage"
        android:src="@drawable/choices"
        android:visibility="invisible"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/choice1"
        android:background="#00000000"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@id/Hchoices1"
        app:layout_constraintEnd_toEndOf="@id/Hchoices2"
        app:layout_constraintTop_toTopOf="@id/topchoices"
        app:layout_constraintBottom_toBottomOf="@id/choices2"
        android:clickable="false"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/choice2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:background="#00000000"
        app:layout_constraintStart_toStartOf="@id/Hchoices2"
        app:layout_constraintEnd_toEndOf="@id/Hchoices3"
        app:layout_constraintTop_toTopOf="@id/topchoices"
        app:layout_constraintBottom_toBottomOf="@id/choices2"
        android:clickable="false"


        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/choice3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00000000"

        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@id/Hchoices1"
        app:layout_constraintEnd_toEndOf="@id/Hchoices2"
        app:layout_constraintTop_toTopOf="@id/choices2"
        app:layout_constraintBottom_toBottomOf="@id/choices3"

        android:clickable="false"

        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/choice4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00000000"

        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@id/Hchoices2"
        app:layout_constraintEnd_toEndOf="@id/Hchoices3"
        app:layout_constraintTop_toTopOf="@id/choices2"
        app:layout_constraintBottom_toBottomOf="@id/choices3"
        android:clickable="false"

        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.28"
        android:orientation="horizontal"
        android:id="@+id/topchoices"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.48"
        android:orientation="horizontal"
        android:id="@+id/choices2"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.65"
        android:orientation="horizontal"
        android:id="@+id/choices3"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.2"
        android:orientation="vertical"
        android:id="@+id/Hchoices1"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical"
        android:id="@+id/Hchoices2"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.8"
        android:orientation="vertical"
        android:id="@+id/Hchoices3"
        />



    <TextView
        android:id="@+id/Toptext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Grab a sheet \n and draw Charlie on it:"
        android:textColor="@color/white"
        android:gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@id/starttext2"
        app:layout_constraintTop_toTopOf="@id/toptext2"
        />


</androidx.constraintlayout.widget.ConstraintLayout>