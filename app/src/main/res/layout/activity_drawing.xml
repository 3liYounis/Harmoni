        android:layout_height="wrap_content"
        android:background="@drawable/ic_continue_app"
        android:gravity="center"

        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="36dp"
        app:layout_constraintBottom_toBottomOf="@id/bottomimage1"
        app:layout_constraintEnd_toEndOf="@id/endimage1"
        app:layout_constraintHorizontal_bias="0.594"
        app:layout_constraintStart_toStartOf="@id/startimage1"
        app:layout_constraintTop_toTopOf="@id/topimage1"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Guideline
