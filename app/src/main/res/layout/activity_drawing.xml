        android:text="Grab a sheet \n and draw Charlie on it:"
        android:textColor="@color/white"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/starttext2"
        app:layout_constraintTop_toTopOf="@id/toptext2" />

