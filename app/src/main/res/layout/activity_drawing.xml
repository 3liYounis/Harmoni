        android:background="#00000000"
        android:clickable="false"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/choices2"
        app:layout_constraintEnd_toEndOf="@id/Hchoices2"
        app:layout_constraintStart_toStartOf="@id/Hchoices1"
        app:layout_constraintTop_toTopOf="@id/topchoices" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/choice2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00000000"
        android:clickable="false"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/choices2"
        app:layout_constraintEnd_toEndOf="@id/Hchoices3"
        app:layout_constraintStart_toStartOf="@id/Hchoices2"
        app:layout_constraintTop_toTopOf="@id/topchoices"


        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/choice3"
        android:layout_width="0dp"
        android:layout_height="0dp"
