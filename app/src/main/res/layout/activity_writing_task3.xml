<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WritingTask3Activity"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="411dp"
        android:layout_height="147dp"
        android:backgroundTint="@color/black"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="602dp"
            android:layout_height="162dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/harmoni_logo" />

    </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/frameLayout">


            <LinearLayout
                android:layout_width="361dp"
                android:layout_height="64dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fillinBlank1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/demibold"
                    android:gravity="left"
                    android:inputType="text"
                    android:lines="2"
                    android:text="Even though my day was"
                    android:textColor="@color/white"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/Blank"
                    android:layout_width="81dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:editable="false"
                    android:ems="10"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/Aqua"
                    android:textSize="22dp" />


            </LinearLayout>

            <TextView
                android:id="@+id/fillinBlank2"
                android:layout_width="321dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="left"
                android:inputType="text"
                android:lines="2"
                android:text="It was also"
                android:fontFamily="@font/demibold"
                android:textColor="@color/white"
                android:textSize="22dp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:outlineSpotShadowColor="@color/white"
                app:boxStrokeColor="@color/white"
                app:endIconMode="clear_text"
                app:endIconTint="@color/white"
                app:hintTextColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Edittext1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:hint="E.g: Full of activities, Rewarding, etc.. "
                    android:outlineSpotShadowColor="@color/black"
                    android:textColorHint="@android:color/darker_gray"
                    app:hintTextColor="@color/white" />

            </com.google.android.material.textfield.TextInputLayout>


            <ImageButton
                android:id="@+id/DoneWritingAct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_continue_app"
                android:gravity="center"
                android:text="I'm Done!"
                android:textColor="@color/white"
                android:textSize="20sp" />


        </LinearLayout>

    <FrameLayout

        android:id="@+id/frameLayout"
        android:layout_width="376dp"
        android:layout_height="440dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/InstructionsWritingAct"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/demibold"
            android:text="Fill in the blanks:"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold" />
    </FrameLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:itemIconTint="@color/white"
            app:itemIconSize="35dp"
            android:background="@color/black"
            app:menu="@menu/bottom_nav_menu">

        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </androidx.constraintlayout.widget.ConstraintLayout>
